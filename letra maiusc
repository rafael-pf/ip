#include <stdio.h>

int main(){
    // Entrada: Alexandre Mota => SaÃ­da: Mota, A. (so 1 string)
    char nome[50];
    int i;
    printf("Digite um nome: ");
    scanf(" %49[^\n]", nome);
    if(nome[0]>=97){
        nome[0]-=32;
    }
    for(i=0; i<50; i++){
        if(nome[i]==' '){
            if(nome[i+1]>=97){
                nome[i+1]-=32;
            }
        }
    }
    printf("%s\n", nome);
    
    
    return 0;
}
