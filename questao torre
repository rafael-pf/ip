    for(p=1;p<=(2*(n*n)+n-1);p++){
        if(p==n/2)
        
        
        
        else {printf(".");
        if(p%(2*n-1)==0){
            printf("\n");
            
        }
        }
    }
    do{
        h++;
        if(h<=2)
            printf("#");
        else 
