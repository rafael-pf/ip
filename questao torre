#include <stdio.h>

int main(){

    int n, p, e=0, t=0, h=1;

    scanf("%d", &n);

    for(p=1;p<=(2*(n*n)-n);p++){
        if(p>n && ((p-n)%(2*n-2)==0 || (p-n)%(2*n)==0)) {
            printf("&");
            e++;
        }
        else if(e%2!=0){
            printf("-");
            t++;
        }
        else{ 
            printf(".");
        }
        if(p%(2*n-1)==0){
            printf("\n");
        }
    }
    do{
        h++;
        if(h<=2)
            printf("#");
        else 
            printf("##");
    }while(h<=n);
    
    printf("\n%d", e);
    return 0;
}
